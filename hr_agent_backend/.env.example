# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, google
LLM_API_KEY=your_llm_api_key_here

# OpenAI Configuration (if using OpenAI)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (if using Anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration (if using Google Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Google Calendar API Configuration
GOOGLE_CALENDAR_CREDENTIALS_PATH=credentials.json
GOOGLE_CALENDAR_TOKEN_PATH=token.json

# Email Configuration
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Company Information
COMPANY_NAME=Your Company Name
INTERVIEWER_NAME=Hiring Manager Name
INTERVIEWER_EMAIL=interviewer@company.com

# Development Mode (set to 'true' to use mock implementations)
DEV_MODE=false